= semantic_form_for [:admin, @raffle] do |f|
  - if @raffle.errors.any?
    #error_explanation
      h2 = "#{pluralize(@raffle.errors.count, "error")} prohibited this raffle from being saved:"
      ul
        - @raffle.errors.full_messages.each do |message|
          li = message

  = f.input :title
  = f.input :description, as: 'text'
  = f.input :starts_at, as: 'string', input_html: {type: 'date', value: date_input_value(@raffle.starts_at)}
  = f.input :ends_at, as: 'string', input_html: {type: 'date', value: date_input_value(@raffle.ends_at)}

  = f.submit 'Save'
